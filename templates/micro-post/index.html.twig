{% extends 'base.html.twig' %}
{% block body %}
    <small class="d-block text-right pt-3">
        <a href="{{ path('micro_post_add') }}"> add a new</a>
    </small>
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
  {% for post in posts %}
      <a href="{{ path('micro_post_post',{'id': post.id}) }}">
        {{ include('micro-post/raw-post.html.twig', {'post': post}) }}
      </a>
      <small class="d-block text-right pt-3">
          <a href="{{ path('micro_post_edit', {'id':post.id}) }}"> edit post</a>
      </small>
    {% endfor %}
{% endblock %}